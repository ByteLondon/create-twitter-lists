{
    "compilerOptions": {
        "declaration": false,
        "declarationMap": false,
        "rootDir": "./src",
        "outDir": "./lib",
        "strict": true,
        "noImplicitAny": false,
        "lib": ["es2019", "esnext.asynciterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2018",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": ["./**/*.test.ts", "./**/*.steps.ts"]
}
